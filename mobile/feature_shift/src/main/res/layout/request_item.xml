<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/item_background"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_request_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_request_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Заявка на перевоз груза" />

    <TextView
        android:id="@+id/tv_request_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="10:10"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_request_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.09.22"
        app:layout_constraintEnd_toEndOf="@+id/tv_request_time"
        app:layout_constraintStart_toStartOf="@+id/tv_request_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_request_time" />

    <TextView
        android:id="@+id/tv_request_customer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_request_title"
        app:layout_constraintStart_toStartOf="@+id/tv_request_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_request_title"
        tools:text="ООО Газпром" />

    <TextView
        android:id="@+id/tv_request_from_title"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@+id/tv_request_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_request_customer"
        android:text="От" />

    <TextView
        android:id="@+id/tv_request_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_request_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_request_from_title"
        tools:text="г. Иркутск, утаотмтщт, 73" />

    <TextView
        android:id="@+id/tv_request_to_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_request_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_request_from"
        android:text="Куда" />

    <TextView
        android:id="@+id/tv_request_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_request_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_request_to_title"
        tools:text="г. Новосибирск, нанпыгаушаи" />

    <TextView
        android:id="@+id/tv_status_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@+id/tv_request_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_request_to"
        android:text="Статус" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_request_customer"
        app:layout_constraintTop_toBottomOf="@+id/tv_status_title"
        tools:text="В работе" />

</androidx.constraintlayout.widget.ConstraintLayout>